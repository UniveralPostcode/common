{
    "name": "UniveralPostcode/Common",
    "type": "library",
    "description": "Core components for the UniversalPostcode suite",
    "keywords": [
        "UniveralPostcode",
        "Common"
    ],
    "homepage": "https://github.com/UniveralPostcode/Common",
    "license": "MIT",
    "authors": [
        {
            "name": "Ben James",
            "email": "in@benjam.es",
            "homepage": "https://github.com/benjam-es",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~5.6|~7.0"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=5.4.3",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "UniveralPostcode\\Common\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "UniveralPostcode\\Common\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
